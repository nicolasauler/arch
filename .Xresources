! special
*.foreground:   #a8a19f
*.background:   #1b1918
*.cursorColor:  #a8a19f

! black
*.color0:       #1b1918
*.color8:       #766e6b

! red
*.color1:       #f22c40
*.color9:       #f22c40

! green
*.color2:       #5ab738
*.color10:      #5ab738

! yellow
*.color3:       #d5911a
*.color11:      #d5911a

! blue
*.color4:       #407ee7
*.color12:      #407ee7

! magenta
*.color5:       #6666ea
*.color13:      #6666ea

! cyan
*.color6:       #00ad9c
*.color14:      #00ad9c

! white
*.color7:       #a8a19f
*.color15:      #f1efee

! deactivate urxt scrollbar
URxvt.scrollBar:	false

! fix prompt showing at middle of screen
URxvt.geometry:		80x-1

! set font
URxvt.font:	\
        xft:InconsolataGo Nerd Font Mono:style=Bold:antialias=true:pixelsize=20:minspace=False, \
        xft:InconsolataGo Nerd Font Mono:style=Regular:antialias=true:pixelsize=24:minspace=False, \
        xft:InconsolataGo Nerd Font:style=Bold:antialias=true:pixelsize=20:minspace=False, \
        xft:InconsolataGo Nerd Font:style=Regular:antialias=true:pixelsize=20:minspace=False, \
        xft:Font Awesome 6 Free:style=Solid:pixelsize=20, \
        xft:Font Awesome 6 Free:pixelsize=20, \
        xft:Source Code Pro:pixelsize=24, \
        xft:Font Awesome 6 Brands, \
        xft:Symbols Nerd Font Mono

! add resizing capability
URxvt.perl-ext-common:	resize-font,matcher

URxvt.url-launcher: firefox
URxvt.matcher.button: 1
URxvt.keysym.M-u: perl:matcher:select
